{
  "name": "ci-server-static",
  "version": "1.0.0",
  "private": true,
  "description": "Static assets for CI server",
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:css": "tailwindcss --cwd ../ -i static/src/index.css -o static/dist/bundle.css --minify --optimize",
    "build:js": "esbuild src/index.js --bundle --minify --outfile=dist/bundle.js --format=iife --global-name=CI --target=es2017"
  },
  "dependencies": {
    "asciinema-player": "3.15.0",
    "highlight.js": "^11.11.1",
    "htmx.org": "^2.0.8"
  },
  "devDependencies": {
    "@tailwindcss/cli": "4.2.0",
    "esbuild": "0.27.3",
    "tailwindcss": "4.2.0"
  }
}
